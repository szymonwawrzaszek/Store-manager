<br></br>
<%= form_tag(item_list_store_path(@store), method: :get) do %>
    <%= text_field_tag :search %>
    <%= submit_tag 'Search items', name: nil%>
<% end %>
<% if !@items.empty? %>
<table class="table table-striped table-hover">
  <thead >
  <tr>
    <th scope="col">Items</th>
    <th scope="col">Price</th>
    <th scope="col">Photo</th>
  </tr>
  </thead>
  <tbody>
  <% for item in @items do %>
        <tr >
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td>
            <% if item.has_photo? %>
                <%= image_tag item.photo_path, size: "200x120"%>
            <% else %>
                No photo.
            <% end %>
          </td>
        </tr>
  <% end %>
  </tbody>
</table>
<% if @search %>
     <%=link_to "Click here to remove search filter", item_list_store_path(@store) %><br></br>
<% end %>
<% elsif @search %>
    <br></br>No item contains "<%= @search %>" in name. <br></br>
     <%=link_to "Click here to remove search filter", item_list_store_path(@store) %><br></br>
<% else %>
    <br></br>Item list is empty.<br></br>
<% end %>

<p><%=link_to "Back", @store, class: "btn btn-primary"  %></p>