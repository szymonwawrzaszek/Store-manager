<p id="notice"><%= notice %></p>

<h1>Items for <%= @warehouse.name %></h1>

<% if !@warehouse.items.empty? %>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= link_to 'Show', [@warehouse, item], class: "btn btn-primary " %></td>
        <td><%= link_to 'Edit', edit_warehouse_item_path(@warehouse, item), class: "btn btn-primary " %></td>
        <td><%= link_to 'Destroy', [@warehouse, item], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger " %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    <% else %>
    <p><%= @warehouse.name %> hasn't any items yet.</p>
    <% end %>
<br>

<%= link_to 'New Item', new_warehouse_item_path(@warehouse), class: "btn btn-primary " %>
<%= link_to 'Warehouse info', @warehouse, class: "btn btn-primary " %>
