<p id="notice"><%= notice %></p>

<h1><%= @store.name %> staff </h1>
<% if !@store.employees.empty? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Surname</th>
      <th scope="col">Phone num</th>
      <th scope="col">Email</th>
      <th scope="col">Position</th>
      <th scope="col">Work time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.surname %></td>
        <td><%= employee.phone_num %></td>
        <td><%= employee.email %></td>
        <td><%= employee.position %></td>
        <td><%= employee.work_time %></td>
        <td><%= link_to 'Show', [ @store, employee ], class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_store_employee_path( @store, employee ), class: "btn btn-primary btn-sm"  %></td>
        <td><%= link_to 'Delete Employee', [ @store, employee ], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn  btn-sm delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
    <p><%= @store.name %> hasn't any staff yet.</p>
<% end %>
<%= link_to 'New Employee', new_store_employee_path(@store), class: "btn btn-primary " %>
<%= link_to 'Store info', @store, class: "btn btn-primary " %>